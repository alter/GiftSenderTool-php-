<?php
class BasePartConfig{
    private $basepart_name;
    private $billing_api_host;
    private $billing_api_port;
    private $master_server_host;
    private $master_server_port;
    private $senderName;
    private $subject;
    private $body;
    
    public function &__get($property) {
        if(property_exists($this, $property)){
            return $this->$property;
        }
    }

    public function __set($property, $value) {
        if(property_exists($this, $property)){
            $this->$property = $value;
        }
    }
}
?>
